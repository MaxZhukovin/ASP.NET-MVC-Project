@model CarDetailsViewModels

    <div class="container mt-5">
        <div style="max-width:100%;width:100%; max-height:700px; height:auto;">
            <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">


                <div class=" p-4 d-flex flex-column position-static" style="width:50%;">
                    <h1>Название: @Model.GetAllCars.name</h1>
                    <h3 class="mb-0">Цена: @Model.GetAllCars.priece.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-us"))</h3>

                    <p class="card-text mb-auto">Краткое описагие: @Model.GetAllCars.ShortDescription</p>

                </div>


                <div class=" d-none d-lg-block" style="width:50%; ">
                    <img src="@Model.GetAllCars.img" class="card-img-top" alt="@Model.GetAllCars." height: auto>
                </div>
            </div>
        </div>


        <section id="cd-placeholder-2" style="text-align: center; height: 380px;overflow: hidden;">
            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:60%; display: inline-block;">


                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Model.GetAllDetails.img" class="card-img-top" alt="@Model.GetAllCars." style="height: 380px;overflow: hidden;">
                    </div>

                    <div class="item">
                        <img src="@Model.GetAllDetails.img1" class="card-img-top" alt="@Model.GetAllCars." style="height: 380px;overflow: hidden;">
                    </div>
                    <div class="item">
                        <img src="@Model.GetAllDetails.img2" class="card-img-top" alt="@Model.GetAllCars." style="height: 380px;overflow: hidden;">
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>



        <section class="jumbotron text-center">
            <div class="container">
                <h1>Описание</h1>
                <p class="lead text-muted">@Model.GetAllDetails.year</p>

            </div>
        </section>





    </div>